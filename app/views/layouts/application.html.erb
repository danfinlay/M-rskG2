<!DOCTYPE html>
<html>
<head>
  <title>BssApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,600,300,200', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>">

<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag('bss-logo.png', height: '23'), @logo_url, class: 'navbar-brand' %>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to 'Document Proof', root_url %>
        </li>
      </ul>
      <p class="navbar-text navbar-right">
        <% if user_signed_in? %>
            Signed in as <%= current_user.email %>
            (<%= link_to "Logout", destroy_session_path(resource_name), :method => :delete, :class => 'navbar-link' %>)
        <% else %>
            <%= link_to "Login", new_session_path(resource_name), :class => 'navbar-link' %>
        <% end %>
      </p>
    </div>
  </div>
</nav>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if notice %>
          <div class="alert alert-success" role="alert"><%= raw(notice) %></div>
      <% end %>
      <% if alert %>
          <div class="alert alert-danger" role="alert"><%= raw(alert) %></div>
      <% end %>
    </div>
  </div>
</div>

<%= yield %>

</body>
</html>
